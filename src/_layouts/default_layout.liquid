  <script>
    ;(function () {

      // Optimization for Repeat Views
      if( sessionStorage.fontsLoaded ) {
        console.log('Found key "fontsLoaded" in session storage.');
        document.documentElement.className += " fonts-loaded";
        return;
      }

      // Avoid blocking rendering by loading fontfaceobserver.js asynchronously
      var script = document.createElement('script');
      script.src = 'assets/ffo/fontfaceobserver.js';
      script.async = true;

      script.onload = function () {
        var body_font = new FontFaceObserver('Source Sans Pro');
        var h1_font = new FontFaceObserver('Source Sans Pro', { weight: 700 });
        var subheadings_font = new FontFaceObserver('Source Sans Pro', { weight: 600 });

        Promise.all([
          body_font.load(),
          h1_font.load(),
          subheadings_font.load()
        ]).then(function () {
          console.log('Source Sans Pro family has loaded with Font Face Observer.');
          document.documentElement.className += " fonts-loaded";
          // Optimization for Repeat Views
          sessionStorage.fontsLoaded = true;
        });
      };
      document.head.appendChild(script);

    })();
  </script>

