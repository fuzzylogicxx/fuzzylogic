         url(/assets/type/sans/SourceSansPro-Regular.otf) format("opentype");
    font-weight: 400;

    /* Does no harm to include this even when we’re also using a JS-based font-loading strategy (ref: https://www.zachleat.com/web/comprehensive-webfonts/#font-display) */
    font-display: swap;
  }
  @font-face {
    font-family: Source Sans Pro;
    src: url(/assets/type/sans/SourceSansPro-It-subset.woff2) format("woff2"),
         url(/assets/type/sans/SourceSansPro-It-subset.zopfli.woff) format("woff"),
