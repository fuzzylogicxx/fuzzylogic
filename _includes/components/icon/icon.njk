
{%- if params.text %}
<span class="l-labelled-icon">
  <svg class="l-icon l-labelled-icon__icon" aria-hidden="true" focusable="false" width="0.75em" height="0.75em"><use xlink:href="#icon-{{ params.name }}"></use></svg>
  {%- if params.text %} {{ params.text }}{%- endif %}
</span>
{%- elif %}
<svg class="l-icon" aria-hidden="true" focusable="false" width="0.75em" height="0.75em"><use xlink:href="#icon-{{ params.name }}"></use></svg>
{%- endif %}
