---
layout: layouts/base.njk
templateClass: post-main
---
{%- from "system/component.njk" import component -%}

<div class=""> <!-- container -->

  <article class="" itemtype="http://schema.org/BlogPosting">

    <header class="stack">
      {% switch post.data.tags[1] %}
        {% case "link" %}
          {{ component('icon', {
            name: 'bookmark',
            text: 'Bookmark'
          }) }}
        {% case "note" %}
          {{ component('icon', {
            name: 'note',
            text: 'Note'
          }) }}
        {% default %}
          {{ component('icon', {
            name: 'entry',
            text: 'Entry'
          }) }}
      {% endswitch %}
      <time class="dt-published" itemprop="dateCreated pubdate datePublisheddatePublished" datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
      {% if(tags[1] === 'note') -%} <span>·</span> {{ page.date | readableTime }} <span>·</span> {{ location }}</span>{% endif -%}
      {%- if (tags[1] !== 'note') and (title) -%}<h1 itemprop="headline">{{ title }}</h1>{%- endif -%}
    </header>

    <div class="e-content stack {{ "article-type-listing" if isList }}" itemprop="articleBody">

      {% if linkTarget %}
      <a class="btn btn-icon" href="{{ linkTarget }}">
        <span class="btn-icon-text">Direct Link</span>
        {{ component('icon', { name: 'offsite' }) }}
      </a>
      {% endif %}

      {{ content | safe }}

    </div> <!-- /.e-content -->

    <footer class="full-article-footer stack">

      <h2 class="h3">Related topics</h2>

      <div class="cluster">
        <ul role="list" class="tags">
        {% for tag in tags %}
          {%- if (tag != "posts") and (tag != "link") and (tag != "note") and (tag != "entry") -%}
          {% set tagUrl %}/tags/{{ tag }}/{% endset %}
          <li><a rel="tag" href="{{ tagUrl | url }}" class="tag">{{ tag }}</a></li>
          {%- endif -%}
        {% endfor %}
        </ul>
      </div>

      <nav aria-label="Posts navigation" class="traverse">
        {%- set previousPost = collections.posts | getPreviousCollectionItem(page) %}
        {%- if previousPost %}<a rel="prev" href="{{ previousPost.url | url }}"><span aria-hidden="true">← </span>Previous post</a></li>{% endif %}
        {%- set nextPost = collections.posts | getNextCollectionItem(page) %}
        {%- if nextPost %}<a rel="next" href="{{ nextPost.url | url }}">Next post<span aria-hidden="true"> →</span></a>{% endif %}
      </nav>

    </footer>

  </article>

</div> <!-- /.container -->
